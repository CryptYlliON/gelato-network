{
  "name": "gelato-contracts",
  "version": "0.0.1",
  "description": "If This Then That Automation on Ethereum",
  "repository": "https://github.com/gelatodigital/gelato.git",
  "author": "The guys from gelato-digital",
  "private": false,
  "scripts": {
    "block-number-ropsten": "npx buidler block-number-ropsten",
    "build": "babel ./scripts --out-dir dist",
    "solhint": "solhint contracts/**/*.sol",
    "clean": "rimraf dist",
    "compile": "npx buidler clean && npx buidler compile",
    "contracts-ropsten": "npx buidler contracts-ropsten",
    "deploy-actionkybertrade": "export CONTRACT_NAME=ActionKyberTrade && babel-node scripts/deploy/deployWithoutArgs.js",
    "deploy-actionkybertrade-ropsten": "export BUIDLER_NETWORK=ropsten && export CONTRACT_NAME=ActionKyberTrade && babel-node scripts/deploy/deployWithoutArgs.js",
    "deploy-actionmultimintfortriggertimestamppassed": "export CONTRACT_NAME=ActionMultiMintForTriggerTimestampPassed && babel-node scripts/deploy/deployWithoutArgs.js",
    "deploy-actionmultimintfortriggertimestamppassed-ropsten": "export BUIDLER_NETWORK=ropsten && export CONTRACT_NAME=ActionMultiMintForTriggerTimestampPassed && babel-node scripts/deploy/deployWithoutArgs.js",
    "deploy-gelatocore": "export CONTRACT_NAME=GelatoCore && babel-node scripts/deploy/deployWithoutArgs.js",
    "deploy-gelatocore-ropsten": "export BUIDLER_NETWORK=ropsten && export CONTRACT_NAME=GelatoCore && babel-node scripts/deploy/deployWithoutArgs.js",
    "deploy-triggertimestamppassed": "export CONTRACT_NAME=TriggerTimestampPassed && babel-node scripts/deploy/deployWithoutArgs.js",
    "deploy-triggertimestamppassed-ropsten": "export BUIDLER_NETWORK=ropsten && export CONTRACT_NAME=TriggerTimestampPassed && babel-node scripts/deploy/deployWithoutArgs.js",
    "deployments-ropsten": "export BUIDLER_NETWORK=ropsten && npx buidler deployments-ropsten",
    "eth-balance": "npx buidler eth-balance --a",
    "eth-balance-signer-ropsten": "npx buidler eth-balance-signer --network ropsten",
    "eth-price": "npx buidler eth-price",
    "rebuild": "yarn clean && yarn build"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@nomiclabs/buidler": "^1.0.1",
    "@nomiclabs/buidler-ethers": "^1.0.1",
    "@openzeppelin/contracts": "^2.4.0",
    "dotenv": "^8.2.0",
    "ethers": "^4.0.23",
    "solc": "^0.5.14",
    "solhint": "^2.3.0"
  },
  "dependencies": {
    "rimraf": "^3.0.0"
  }
}
